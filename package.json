{
    "name": "gitee-actions",
    "version": "1.0.0",
    "description": "使用Gitee Webhooks 触发 Github Actions",
    "author": "Fansy <418536538@qq.com>",
    "homepage": "https://github.com/fanhaoyuan/gitee-actions",
    "bugs": {
        "url": "https://github.com/fanhaoyuan/gitee-actions/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fanhaoyuan/gitee-actions.git"
    },
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "bin": {
        "gitee-actions": "dist/bin/app.js"
    },
    "keywords": [
        "github actions",
        "ci",
        "workflow",
        "github",
        "webhooks"
    ],
    "scripts": {
        "build": "rimraf dist && nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "rimraf dist && nest start",
        "start:dev": "rimraf dist && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "dumi dev",
        "docs:build": "dumi build"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "commander": "^9.0.0",
        "fast-glob": "^3.2.11",
        "fs-extra": "^10.0.0",
        "lodash": "^4.17.21",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "yaml": "^2.0.0-10"
    },
    "devDependencies": {
        "@fansy/commit-msg-validator": "^1.0.0",
        "@fansy/eslint-config": "^1.0.0",
        "@fansy/prettier-config": "^1.0.0",
        "@jest/types": "^27.5.1",
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "27.0.2",
        "@types/lodash": "^4.14.178",
        "@types/node": "^16.0.0",
        "@types/rimraf": "^3.0.2",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "lint-staged": "^12.1.7",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5",
        "yorkie": "^2.0.0",
        "dumi": "^1.0.13"
    },
    "gitHooks": {
        "commit-msg": "cmv",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,md,json,yml}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint"
        ]
    }
}
